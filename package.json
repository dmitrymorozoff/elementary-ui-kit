{
    "name": "elementary-ui-kit",
    "version": "0.4.0",
    "description": "A collection of reusable React components built with styled-components.",
    "main": "index.js",
    "repository": {
        "type": "git",
        "url": "https://github.com/dmitrymorozoff/elementary-ui-kit"
    },
    "keywords": [
        "react",
        "react-component",
        "ui library",
        "ui",
        "components",
        "ui-kit"
    ],
    "scripts": {
        "start": "parcel src/docs/index.html",
        "docs": "styleguidist server",
        "build": "npm run clean && webpack --mode=production",
        "build:docs": "./node_modules/.bin/styleguidist build",
        "publication": "npm run clean && webpack --mode=production && npm run copy",
        "postpublication": "./scripts/publish-gh-pages.sh",
        "copy:docs": "cpx 'styleguide/**/*.*' ./docs",
        "copy": "cpx ./README.md build && cpx ./package.json build",
        "clean": "rimraf build/*",
        "test:watch": "jest --watch",
        "test": "jest",
        "lint": "./node_modules/.bin/eslint --ext .js --ext .jsx ./src"
    },
    "pre-commit": [
        "lint"
    ],
    "jest": {
        "setupFiles": [
            "./jestsetup.js"
        ],
        "snapshotSerializers": [
            "<rootDir>/node_modules/enzyme-to-json/serializer"
        ]
    },
    "author": "Morozov Dmitry  <dimemorozovy@yandex.ru>",
    "license": "MIT",
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-jest": "^23.4.2",
        "babel-loader": "^7.1.5",
        "babel-plugin-styled-components": "^1.5.1",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-es2015": "^6.24.1",
        "babel-preset-react": "^6.24.1",
        "babel-preset-stage-0": "^6.24.1",
        "cpx": "^1.5.0",
        "enzyme": "^3.3.0",
        "enzyme-adapter-react-16": "^1.1.1",
        "enzyme-to-json": "^3.3.4",
        "eslint": "^5.2.0",
        "eslint-plugin-import": "^2.13.0",
        "eslint-plugin-jsx-a11y": "^6.1.1",
        "eslint-plugin-react": "^7.10.0",
        "jest": "^23.4.2",
        "parcel-bundler": "^1.9.7",
        "path": "^0.12.7",
        "react-addons-test-utils": "^15.6.2",
        "react-styleguidist": "^7.1.3",
        "rimraf": "^2.6.2",
        "webpack": "^4.16.3",
        "webpack-cli": "^3.1.0",
        "webpack-node-externals": "^1.7.2"
    },
    "dependencies": {
        "polished": "^1.9.3",
        "prop-types": "^15.6.2",
        "react": "^16.4.1",
        "react-dom": "^16.4.1",
        "styled-components": "^3.3.3"
    },
    "babel": {
        "plugins": [
            "babel-plugin-styled-components",
            "babel-plugin-transform-object-rest-spread"
        ],
        "env": {
            "test": {
                "presets": [
                    [
                        "env",
                        {
                            "modules": "commonjs",
                            "useBuiltIns": "usage",
                            "debug": false
                        }
                    ],
                    "stage-0",
                    "react",
                    "jest"
                ]
            }
        }
    }
}
